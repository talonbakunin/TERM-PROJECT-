@model IEnumerable<Employee>

<table>
    <!-- Table headers -->
    <thead style="background-color: #aaa;">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Birth Date</th>
            <th>Position</th>
            <th>Details</th> <!-- Add a new column for Details -->
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr style="background-color: @(employee.Id % 2 == 0 ? "#ccc" : "#eee");">
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.BirthDate.ToString("yyyy-MM-dd")</td>
                <td>@employee.Position</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
